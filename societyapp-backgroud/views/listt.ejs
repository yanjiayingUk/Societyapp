    <title>Document</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }
        
        .title{
				width:100%;
				height:80px;
                float: left;
				color:#ffffff;
                margin-bottom: 3%;
				background-color:#1daea9;
				border-bottom:1px solid #ffffff;
				font-size:20pt;
				font-family:"微软雅黑";
				line-height:80px;				
		}
        .title img{
                margin-top:10px;
                margin-left: 1%;
                width: 50px;
                float: left;
        }
        .title p{
                margin-left: 7%;
                float: left;
        }
        table {
            border-collapse: collapse;
            width: 885px;
            margin: 0 auto;
            text-align: center;
            display: block;
            margin-top: 100px;
        }
        table td, table th {
            border: 1px solid #cad9ea;
            color: #666;
            height: 45px;
        }
        table thead th {
            background-color: #CCE8EB;
            width: 220px;
        }
        table tr:nth-child(odd) {
            background: #fff;
        }
        table tr:nth-child(even) {
            background: #F5FAFA;
        }

        .container {
            margin-top: 80px;
        }
        .left {
            background-color:#d0daf3;
            position: fixed;
            top: 80px;
            bottom: 0;
            width: 250px; 
        }
        .left li {
            text-align: center;
            height: 60px;
            line-height: 60px;
            font-size: 15px;
            background: #5c5f5f;
            margin :10px
        }
        .left li:nth-child(1) {
            background-color: #1daea9;
        }
        .left li:hover {
            background-color:#1daea9;
        }
        .left a {
            color: #fff;
            text-decoration: none;
        }
        .right {
            margin-left: 250px;
        }
        nav {
            width: 100%;
            min-width: 960px;
            height: 80px;
            background-color: #2a4795;
            position: fixed;
            top: 0;
            left: 0;
            z-index:200;
            color: white;
            text-align: center;
            line-height: 80px;
            font-size: 20px;
        }
    </style> 
</head>

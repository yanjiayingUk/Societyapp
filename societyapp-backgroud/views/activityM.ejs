<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>娱乐管理</title>
    <link rel="stylesheet" href="../stylesheets/css.css">
</head>
<body>
    <div id="login_form">
        <div class="title">
            <img src='../images/qi-4.png'/>	
            吾宠后台管理系统			
        </div>
        <div class="left">
            <div class="a">
                    <h1 onclick="showSystem()">系统管理</h1>
                </div>
                <div class="a">
                    <h1  onclick="showClub()">社团管理</h1>
                </div>
                <div class="a">
                    <h1  onclick="showDongTai()">社区管理</h1>
                </div>
                <div class="a" style="background: #1daea9;">
                    <h1 onclick="showAct()">活动管理</h1>
            </div>
            <div class="a">
                <h1 onclick="showUser()">用户管理</h1>
            </div>
        </div>
        <div class="main">
            <div class="top">
                <h1>活动管理</h1>
                <form class="myform" action="/activeli" method="POST">
                    <input 
                    style='margin-left: 100px;margin-top: 30px;width:400px;height:25px' type='text' value='' placeholder="搜索"
                    class="search_Dongtai" id="search_Dongtai" autocomplete="off" name="search_Dongtai"
                    >
                    <button type='submit' class="search_Bt" id="search_Bt" > 查找</button>
                    <!-- <button>替换</button> -->
                </form>
                <!-- <button>查找和替换</button> -->
            </div>
            <div class="bottonA">
                <table>
                    <tr>
                        <th style="width:2px;"> </th>
                        <th>活动ID</th>
                        <th>活动名</th>
                        <th style="width: 300px;">活动内容</th>
                        <th>活动图片</th>
                        <th>活动地址</th>
                        <th>活动时间</th>
                        <th>活动社团</th>
                        <th>报名者信息</th>
                        <th style="width:100px;">操作</th>
                    </tr>
                    <%for(var i=0;i < active.length;i++){%>
                        <tr>
                            <td style="width:6px"><input type="checkbox"></td>
                            <td>
                                <%= active[i]["acid"]%>
                            </td>
                            <td>
                                <%= active[i]["acname"]%>
                            </td>
                            <td style="width: 300px;">
                                    <%= active[i]["accontent"]%>
                            </td>
                            <td><img src=<%= active[i]["acImg"]%> alt="">
                                <!-- <%= active[i]["acImg"]%> -->
                            </td>
                            <td>
                                <%= active[i]["acaddress"]%>
                            </td>
                            <td>
                                <%= active[i]["actime"]%>
                            </td>
                            <td>
                                <%= active[i]["clubid"]%>
                            </td>
                            <td>
                                <button style="width: 60px;">
                                    <a href="/listb?acid=<%=active[i]["acid"]%>">报名表</a>
                                </button>
                            </td>
                            
                            <!-- <td>
                            <%= active[i]["userId"]%>
                            </td> -->
                            <td style="width:100px;">
                                    <button><a href="/editA?acid=<%=active[i]["acid"]%>">编辑</a></button>
                                    <button><a href="/dela?acid=<%=active[i]["acid"]%>">删除</a></button>
                            </td>
                        </tr>
                    <%}%>
                    
                </table>
                <button class="btn" onclick="showPlay()" style="margin-left: 700px;width:200px;height: 30px;"> 添加活动</button>
            </div>
        </div>
    </div>
</body>
<script>
    function showSystem() {
        window.location = "http://localhost:3000/system";
    }
    function showClub() {
        window.location = "http://localhost:3000/club";
    }
    function showPlay() {
        window.location = "http://localhost:3000/showPlay";
    }
    function showDongTai() {
        window.location = "http://localhost:3000/dongtai";
    }
    function showAct() {
        window.location = "http://localhost:3000/activity";
    }
    function showUser() {
        window.location = "http://localhost:3000/userguanli";
    }
    function showBaoming() {
        window.location = "http://localhost:3000/listb";
    }
</script>
</html>
